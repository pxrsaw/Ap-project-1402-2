<Window x:Class="UserManagementSystem.ChangeInventory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserManagementSystem"
        mc:Ignorable="d"
        Title="ChangeInventory" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <Label HorizontalAlignment="Center" FontSize="15" FontWeight="Bold">Enter new amount</Label>
            <TextBox x:Name="AmountBox" Margin="10" FontSize="40" Height="100"/>
            <Button Click="SubButnnn" Content="Submit Amount" Width="100" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
