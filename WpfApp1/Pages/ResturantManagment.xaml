                        <ComboBoxItem>21</ComboBoxItem>
                        <ComboBoxItem>22</ComboBoxItem>
                        <ComboBoxItem>23</ComboBoxItem>
                        <ComboBoxItem>24</ComboBoxItem>
                        <ComboBoxItem>25</ComboBoxItem>
                        <ComboBoxItem>26</ComboBoxItem>
                        <ComboBoxItem>27</ComboBoxItem>
                        <ComboBoxItem>28</ComboBoxItem>
                        <ComboBoxItem>29</ComboBoxItem>
                        <ComboBoxItem>30</ComboBoxItem>
                    </ComboBox>
                    <Button Content="Search" Click="SearchOrders_Click" Margin="5,20" Width="100" Height="20"/>
                </StackPanel>

                <ListView x:Name="OrdersListView" Grid.Column="1" Margin="10" Visibility="Collapsed">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Order Date" DisplayMemberBinding="{Binding orderDate, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" />
                            <GridViewColumn Header="Restaurant" DisplayMemberBinding="{Binding res.Name}" />
                            <GridViewColumn Header="Total" DisplayMemberBinding="{Binding Price}" />
                            <GridViewColumn Header="Payment" DisplayMemberBinding="{Binding IsCash}" />
                            <GridViewColumn Header="Comment" DisplayMemberBinding="{Binding comments[0].Text}" />
                            <GridViewColumn Header="Score" DisplayMemberBinding="{Binding Score}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</Window>