<Window x:Class="UserManagementSystem.signupsubmit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:pages="clr-namespace:UserManagementSystem"
        Title="Login" Height="450" Width="800"
        Background="#FFE5E5E5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        

        <Label FontSize="20" Grid.Row="1" Grid.Column="0" Content="code:" Margin="10"/>
        <TextBox x:Name="CodeTextBox" Grid.Row="1" Grid.Column="1" Margin="10" FontSize="20"/>

        <Label FontSize="20" Grid.Row="2" Grid.Column="0" Content="Password:" Margin="10"/>
        <TextBox x:Name="Password_TextBox" Grid.Row="2" Grid.Column="1" Margin="10" FontSize="20"/>

        <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Content="submit" Margin="10" Click="Button_Click"  HorizontalAlignment="Center" Height="40" Width="100" FontSize="20"/>
        
    </Grid>
</Window>
